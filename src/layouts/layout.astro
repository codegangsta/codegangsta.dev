---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="antialiased bg-zinc-950 text-zinc-200">
    <div class="max-w-5xl m-auto">
      <div class="mx-4 mt-8 md:mt-20 lg:mt-32 flex flex-col md:flex-row gap-4">
        <aside class="md:w-52 flex flex-col">
          <div class="mb-2 md:mb-20 ml-3.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-zinc-50" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-terminal"><path d="m7 11 2-2-2-2"/><path d="M11 13h4"/><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/></svg>
          </div>
          <nav class="flex flex-col gap-1">
            <a href="/" class="flex flex-row gap-1.5 items-center text-zinc-50 font-medium">
                <span>~</span>
                <span>About</span>
            </a>
            <a href="/blog" class="flex flex-row gap-1.5 items-center text-zinc-400">
                <span class="invisible">~</span>
                <span class=>Blog</span>
            </a>
            <a href="/projects" class="flex flex-row gap-1.5 items-center text-zinc-400">
                <span class="invisible">~</span>
                <span>Projects</span>
            </a>
          </nav>
        </aside>

        <main class="flex flex-col">
          <h1 class="text-2xl font-medium text-zinc-50 mb-20">
            <a href="/">codegangsta_</a>
          </h1>
          <slot/>
        </main>
      </div>
    </div>
	</body>
</html>
